<Window x:Class="PL.EngineerIdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="EngineerIdWindow" Height="200" Width="500">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0,100,0,0" Width="60" Grid.ColumnSpan="2"
                  Click="OkButton_Click"  IsEnabled="{Binding Id, Converter={StaticResource ConverIdToContentKey}}"/>
        </Grid>
        <TextBox MaxLength="9" Width="120" Margin="200,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                 
                 IsEnabled="{Binding Id, Converter={StaticResource ConvertIdToBooleanKey}}"
                 Text="{Binding Id, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>
        <Label Grid.Column="0" Content="Enter your Id:" HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
