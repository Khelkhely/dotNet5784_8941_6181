<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFF9FAFA"/>
                <GradientStop Color="#FF69CBF8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Manager" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="100" Width="200" FontFamily="Showcard Gothic" FontSize="24"
                Click="ManagerMainWindow_Click" Background="White" Margin="100,0,0,100"/>
        <Button Content="Engineer" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="200"
                Click="EngineerMainWindow_Click" Background="White" FontFamily="Showcard Gothic" FontSize="24" Margin="100,100,0,0"/>

        <!--clock-->
        <Label Content="{Binding Path=MyClock}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="200" FontSize="30" FontFamily="Segoe UI Black" Margin="420,190,0,0"/>
        <Button Content="add year" Click="AddYear_Click" FontSize="20" Height="50" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Margin="352,242,0,0"/>
        <Button Content="add month" Click="AddMonth_Click" FontSize="20" Height="50" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Margin="450,242,0,0"/>
        <Button Content="add day" Click="AddDay_Click" FontSize="20" Height="50" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Margin="568,242,0,0"/>

    </Grid>
</Window>
